<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :username %>
				</div>
				<div class="col-xs-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :email %>
				</div>
				<div class="col-xs-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :password %>
				</div>
				<div class="col-xs-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-xs-offset-2 col-xs-8">
					<%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: 'btn btn-primary btn-lg') %>
				</div>
			</div>

			<% if logged_in? %>
				<div class="form-group">
					<div class="col-xs-offset-2 col-xs-8">
						<%= link_to "Delete Account", user_path(@user), method: :delete,
								data: {confirm: "Are you sure you want to delete your account?"}, class: 'btn btn-danger btn-lg' %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
